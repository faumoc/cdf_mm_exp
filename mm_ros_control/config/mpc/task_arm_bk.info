  R
  {
    scaling 1e-1

    (0,0)    1.0  ; x velocity
    (1,1)    1.0  ; y velocity
    (2,2)    1.0  ; turning velocity
    (3,3)    8.0  ; joint 1
    (4,4)    8.0  ; joint 2
    (5,5)    8.0  ; joint 3
    (6,6)    8.0  ; joint 4
    (7,7)    8.0  ; joint 5
    (8,8)    8.0  ; joint 6
    (9,9)    5.0  ; lb steer
    (10,10)  10.0  ; lb wheel
    (11,11)  5.0  ; lf steer
    (12,12)  10.0  ; lf wheel
    (13,13)  5.0  ; rb steer
    (14,14)  10.0  ; rb wheel
    (15,15)  5.0  ; rf steer
    (16,16)  10.0  ; rf wheel
  }
}

legsCost
{
  ; control weight matrix
  Q
  {
    scaling 1e-1

    (0,0)  50.0  ; lb leg
    (1,1)  50.0  ; lf leg
    (2,2)  50.0  ; rb leg
    (3,3)  50.0  ; rf leg
  }
}

endEffector
{
  name "base_link" ; name defined in the URDF

  ; end effector quadratic penalty scaling
  muPosition  250.0
  muOrientation  0.0
}

quadraticPenalty
{
  wheelRolling 1000
  nominalSteerActive 1 ; 0 for deactive, 1 for active, 2 for conditionally active when the steering joints are close to the limits
  nominalSteerState 0.2
  nominalArmState 0.1
}

