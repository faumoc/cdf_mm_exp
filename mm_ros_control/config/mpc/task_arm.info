legsCost
{
  ; control weight matrix
  Q
  {
    scaling 1e-1

    (0,0)  50.0  ; lb leg
    (1,1)  50.0  ; lf leg
    (2,2)  50.0  ; rb leg
    (3,3)  50.0  ; rf leg
  }
}

endEffector
{
  name "end_effector_link" ; name defined in the URDF

  ; end effector quadratic penalty scaling
  muPosition  250.0
  muOrientation  500.0
}

quadraticPenalty
{
  wheelRolling 1000
  nominalSteerActive 1 ; 0 for deactive, 1 for active, 2 for conditionally active when the steering joints are close to the limits
  nominalSteerState 0.5
  nominalArmState 0.2
}

