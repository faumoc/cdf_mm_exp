    scaling 1e-1

    (0,0)    2.0  ; x velocity
    (1,1)    2.0  ; y velocity
    (2,2)    2.0  ; turning velocity
    (3,3)    2.0  ; lb steer
    (4,4)    2.0  ; lb wheel
    (5,5)    2.0  ; lf steer
    (6,6)    2.0  ; lf wheel
    (7,7)    2.0  ; rb steer
    (8,8)    2.0  ; rb wheel
    (9,9)    2.0  ; rf steer
    (10,10)  2.0  ; rf wheel
    (11,11)  5.0  ; sh rot
    (12,12)  10.0  ; sh fle
    (13,13)  10.0  ; el fle
    (14,14)  5.0  ; el rot
    (15,15)  10.0  ; wr fle
    (16,16)  5.0  ; wr rot
